<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parent_layout"
    android:background="#fff"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.Calender_Fragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="#044F8A"
        android:id="@+id/this_week_layout"
        android:layout_marginTop="10dp"

        android:layout_height="100dp">

        <TextView
            android:id="@+id/greeting_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hey Ayan , You got"
            android:textSize="25sp"
            android:textColor="#fff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.074"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.142" />

        <TextView
            android:id="@+id/fixtures_this_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="26 Lectures This week"
            android:textColor="#fff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.074"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.643" />

        <TextView
            android:id="@+id/fixtures_next_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="26 Lectures Next week"
            android:textColor="#fff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.074"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.893" />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/this_week_layout"
    android:layout_height="match_parent">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">




  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/current_next_week"

      android:layout_width="match_parent"
      android:layout_marginStart="10dp"
      android:layout_marginTop="30dp"
      android:layout_marginEnd="10dp"
      android:layout_height="wrap_content">

  </androidx.recyclerview.widget.RecyclerView>


        <View
            android:visibility="gone"
            android:id="@+id/line_divider_main"
            android:layout_width="match_parent"
            android:layout_below="@+id/current_next_week"
            android:layout_marginTop="40dp"
            android:layout_marginStart="80dp"
            android:layout_height="1dp"
            android:background="#000"
            android:layout_marginLeft="50dp" />

        <View
            android:visibility="gone"
            android:id="@+id/line_divider_second"
            android:layout_width="15dp"
            android:layout_below="@+id/current_next_week"
            android:layout_marginTop="33dp"
            android:layout_marginStart="80dp"
            android:layout_height="15dp"
            android:background="@drawable/black_dot"

            android:layout_marginLeft="40dp" />




<!--  <TextView-->
<!--      android:id="@+id/next_week"-->
<!--      android:layout_below="@+id/current_next_week"-->
<!--      android:text="Next_Week"-->
<!--      android:textColor="@color/black"-->
<!--      android:layout_marginStart="10dp"-->
<!--      android:layout_marginTop="30dp"-->
<!--      android:layout_width="wrap_content"-->
<!--      android:layout_height="wrap_content"-->
<!--      android:layout_marginLeft="10dp">-->

<!--  </TextView>-->


      <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/current_next_week_second"
          android:layout_below="@id/line_divider_main"
          android:layout_width="match_parent"
          android:layout_marginStart="10dp"
          android:layout_marginTop="30dp"
          android:paddingBottom="50dp"
          android:layout_marginEnd="10dp"
          android:layout_height="wrap_content">

      </androidx.recyclerview.widget.RecyclerView>





    </RelativeLayout>

</androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_class_fixture_btn"
        android:layout_width="wrap_content"
        android:backgroundTint="#2196F3"
        app:backgroundTint="@color/white"
        android:layout_height="wrap_content"
        android:elevation="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        app:tint="#FFF"

        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"

        android:src="@drawable/ic_add"
        android:layout_alignParentRight="true" />



</RelativeLayout>